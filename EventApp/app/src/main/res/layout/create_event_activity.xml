<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/create_event_id_button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_id_textfield"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/name_id_textfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/location_id_textfield"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:id="@+id/description_id_textfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/create_time_date_id_textfield"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:id="@+id/create_time_date_id_textfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Time/Date"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/name_id_textfield"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:id="@+id/location_id_textfield"
        android:layout_width="214dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="location"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
</android.support.constraint.ConstraintLayout>